
@model Facade.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Details on " +@Model.Name ;    
}

<div id="user-profile-2" class="user-profile">
    <div class="tabbable">
        <ul class="nav nav-tabs padding-18">
            <li class="active">
                <a data-toggle="tab" href="#home">
                    <i class="green ace-icon fa fa-user bigger-120"></i>
                    Profile 
                </a>
            </li>
        </ul>

        <div class="tab-content no-border padding-24">
            <div id="home" class="tab-pane in active">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 center">
                        <span class="profile-picture">
                            <img class="editable img-responsive" alt="Avatar" id="avatar2" src="~/images/@Model.ID/@Model.ProfileImage"/>

                        </span>

                        <div class="space space-4"></div>
                    
                        <a href="@Url.Action("Edit", "Profile", new {id=Model.ID})" class="btn btn-sm btn-block btn-primary">
                            <span class="bigger-110">Edit</span>
                        </a>


                    </div><!-- /.col -->

                    <div class="col-xs-12 col-sm-9">
                        <h4 class="blue">
                            <span class="middle">@Model.Name</span>

                            <span class="label label-purple arrowed-in-right">
                                <i class="ace-icon fa fa-circle smaller-80 align-middle"></i>
                                online
                            </span>
                        </h4>

                        <div class="profile-user-info">
                            <div class="profile-info-row">
                                <div class="profile-info-name">Location:</div>

                                <div class="profile-info-value">
                                    <i class="fa fa-map-marker light-orange bigger-110"></i>
                                    <span>@Model.Location</span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name">BirthDay:</div>

                                <div class="profile-info-value">
                                    <span>@Model.BirthDay</span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name">Gender:</div>

                                <div class="profile-info-value">
                                    <span> @Model.Gender </span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name"> Occupation: </div>

                                <div class="profile-info-value">
                                    <span>@Model.Occupation</span>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->

                <div class="space-20"></div>

                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="widget-box transparent">
                            <div class="widget-header widget-header-small">
                                <h4 class="widget-title smaller">
                                    <i class="ace-icon fa fa-check-square-o bigger-110"></i>
                                    Little bit about Me:                                
                                    </h4>
                            </div>

                            <div class="widget-body">
                                <div class="widget-main">
                                    <p>
                                        @Model.AboutText    
 
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /#home -->

            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <div class="widget-box transparent">
                        <div class="widget-header widget-header-small">
                            <h4 class="widget-title smaller">
                                <i class="ace-icon fa fa-check-square-o bigger-110"></i>
                                Interests
                            </h4>
                        </div>

                        <div class="widget-body">
                            <div class="widget-main">
                                <p>
                                    programming, business, football
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /#home -->

    </div>
</div>



