@using EventProject.Extensions
@using Core
@model Facade.Profile.ProfileViewModel

@{
    ViewBag.Title = "Edit";
    ViewBag.SubTitle = "Edit Profile";
    ViewBag.Button = "Save";
}


<body>

    <h1>Edit Profile</h1>
    <div class="row">
        <section>
            <form asp-controller="Profile" asp-action="Edit" method="POST" class="form-horizontal" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="ProfileImage" class="form-control" type="hidden" />


                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />

                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-md-2 control-label">Image</label>
                    <div class="col-md-10">
                        <input type="file" name="AvatarFile" class="form-control" />
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <span class="profile-picture">
                            <img class="editable img-responsive" alt="Avatar" id="avatar2" src="~/images/@Model.ID/@Model.ProfileImage" />
                        </span>                    
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Location" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Location" class="form-control" />
                    </div>
                </div>



                <div class="form-group">
                    <label asp-for="Gender" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="Gender"
                                asp-items="Html.GetEnumSelectList<ProfileGender>()"></select>

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="BirthDay" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="BirthDay" class="form-control" />

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Occupation" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Occupation" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AboutText" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="AboutText" class="form-control" />
                    </div>
                </div>              

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">@ViewBag.Button</button>
                    </div>
                </div>

                <p>
                    <a asp-action="Index">Back to Profile</a>
                </p>
            </form>
        </section>
    </div>

</body>




